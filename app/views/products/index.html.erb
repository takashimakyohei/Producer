<% @products.each do |product| %>
<div class="content">
<%= link_to "詳細", product_path(product) %>

<% if product.image.attached? %>
  <p><%= image_tag product.image %></p>
<% end %>
<p>生産者：<%= product.producer.name %></p>

<% if product.producer.image.attached? %>
  <p><%= image_tag product.producer.image %></p>
<% end %>

<p>内容：<%= product.content %></p>
<p>値段：<%= product.price %></p>
<p>内容：<%= product.description %></p>
<p><%= product.producer.prefecture.name %></p>
<p>出品者のプロフィール表示(30文字程度まで表示予定)</p>
<p>コメント：<%= product.comments.count %></p>

<% if user_signed_in? %>
  <% if Favorite.find_by(user_id: current_user.id, product_id: product.id) %>
    <%= link_to "いいねを外す", product_favorites_path(product), method: :delete %>
  <% else %>
    <%= link_to "いいね", product_favorites_path(product), method: :post %>
  <% end %>
<% end %>
  いいね数：<%= product.favorites.count %>

</div>
<% end %>