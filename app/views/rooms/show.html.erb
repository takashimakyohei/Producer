
<% if user_signed_in? %>
<h2 class="chat-title"><%= @producer.name %>とのチャットルーム</h2>
<div class="chat-field">
    <% @messages.each do |m| %>
      <!-- メッセージがUserによるものだったら -->
      <% if m.is_user %>
        <!-- メッセージを右に寄せる -->
        <div class="right-message">
          <%= m.content %>
        </div>
      <!-- メッセージがproducerによるものだったら -->
      <% else %>
        <!-- メッセージを左に寄せる -->
        <div class="left-message">
          <%= m.content %>
        </div>
      <% end %>
    <% end %>
  <div class="text-box">
    <%= form_for [@room, @message] do |f| %>
      <%= f.text_field :content %>
      <%= f.submit "メッセージを送る"%>
    <% end %>
  </div>
</div>

