
<div class="form">
  <h2 class="form-title">新規登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-wrapper">
      <p class="form-text"><%= f.label "名前" %></p>
      <div class="form-input"><%= f.text_field :name %></div>
    </div>

    <div class="form-wrapper">
      <p class="form-text"><%= f.label "出身県" %></p>
      <div class="form-input"><%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: '選択して下さい' %></div>
    </div>

    <div class="form-wrapper">
      <p class="form-text"><%= f.label "メールアドレス" %></p>
      <div class="form-input"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="form-wrapper">
      <p class="form-text"><%= f.label "パスワード" %></p>
      <div class="form-input"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>

    <div class="form-wrapper">
      <p class="form-text"><%= f.label "パスワード(再確認)" %></p>
      <div class="form-input"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>

    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
